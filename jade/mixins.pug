mixin dev_head(page_title)
  head
    title=page_title
    | <!-- saved from url=(0014)about:internet -->
    meta(charset='utf-8')
    meta(name='viewport', content="width=device-width, initial-scale=1.0")
    meta(name="SKYPE_TOOLBAR", content="SKYPE_TOOLBAR_PARSER_COMPATIBLE")
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="format-detection", content="telephone=no")
    //-style
      include ../styles/main_global.css
    link(rel='stylesheet', href='styles/main_global.css', media='all')


mixin loop_while(counter)
  -i=0;
  while i < counter
    -i++;
    block

mixin footer()
  .footer
    .section_inner.clearfix
      .logo_block
        a.logo(href='index.html')
          +logo_svg()
          
      ul.main_menu
        li: a.menu_link(href='shop.html'): span Магазин
        li: a.menu_link(href='#'): span Тренды
        li: a.menu_link(href='#'): span Профессионалам
        li: a.menu_link(href='#'): span Доставка и оплата
        li: a.menu_link(href='about.html'): span Мы WIC
        li: a.menu_link(href='contact.html'): span Контакты
      
      .copyrights © 2017 «WIC.one»
        
      .dev_block
        span Разработано в 
        a.gl_link(href='#') Yoldi.ru
        
      
mixin header(shop)
  .header
    .section_inner.clearfix
      .logo_block
        a.logo(href='index.html')
          +logo_svg()

      ul.user_menu
        li(class= shop ? '_active' : ''): a.menu_link(href='shop.html'): span Магазин
        li: a.menu_link(href='#'): span
          span.menu_l_icon.i-cart.cartIcon
        li._small: a.menu_link(href='wishlist.html'): span
          span.i-heart.menu_l_icon
        li._small: a.menu_link(href='profile.html'): span
          span.menu_l_icon.i-account

      ul.main_menu
        li: a.menu_link(href='#'): span Тренды
        li: a.menu_link(href='#'): span Профессионалам
        li: a.menu_link(href='#'): span Доставка и оплата
        li: a.menu_link(href='about.html'): span Мы WIC
        li: a.menu_link(href='contact.html'): span Контакты
        li: a.menu_link(href='#'): span
          span.i-search.menu_l_icon
          
    - if (shop)
      .store_menu_holder
        .section_inner
          ul.store_menu
            li: a.store_link(href='#'): span Волосы
            li: a.store_link(href='#'): span Ногти
            li: a.store_link(href='#'): span Брови
            li: a.store_link(href='#'): span Лицо
            li: a.store_link(href='#'): span Тело

mixin check(txt, chck)
  label.f_check.f_check_v1
    input.inp_hidden(type='checkbox' checked=(chck ? 'checked' : null))
    span.check_text= txt
      
