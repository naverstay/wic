mixin aside(active, sub)
  .aside
    .aside_menu
      .aside_m_item(class= (active === 1 ? 'drop_down' : ''))
        a.aside_m_link(href='profile.html' class= (active === 1 ? 'openAsideMenu' : ''))
          span Профиль
          - if (active === 1)
            span.aside_m_icon
      .aside_m_item(class= (active === 2 ? 'drop_down _opened' : ''))
        a.aside_m_link(href='orders.html' class= (active === 2 ? 'openAsideMenu' : ''))
