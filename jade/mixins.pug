mixin header(shop)
  .header
    .section_inner.clearfix
      .logo_block
        a.logo(href='index.html')
          +logo_svg()

      ul.user_menu
        li(class= shop ? '_active' : ''): a.menu_link(href='shop.html'): span Магазин
        li: a.menu_link(href='cart.html'): span
          span.menu_l_icon.i-cart.cartIcon
        li._small: a.menu_link(href='wishlist.html'): span
          span.i-heart.menu_l_icon
        li._small: a.menu_link.authBtn(href='#'): span
          span.menu_l_icon.i-account

      .main_menu_holder
        ul.main_menu
          li.main_m_item: a.menu_link(href='trends.html'): span Тренды
          li.main_m_item: a.menu_link(href='#'): span Профессионалам
          li.main_m_item: a.menu_link(href='delivery.html'): span Доставка и оплата
          li.main_m_item: a.menu_link(href='about.html'): span Мы WIC
          li.main_m_item: a.menu_link(href='contact.html'): span Контакты
        .main_m_item.wide_hidden
          a.menu_link.openMobMenu(href='#')
            span.hamburger
              span
        .main_m_item.tab_vis: a.menu_link.openSearchBtn(href='#'): span
          span.i-search.menu_l_icon
          
    - if (shop)
      .store_menu_holder
        .section_inner
          ul.store_menu
            li: a.store_link(href='#'): span Волосы
            li: a.store_link(href='#'): span Ногти
            li: a.store_link(href='#'): span Брови
            li: a.store_link(href='#'): span Лицо
            li: a.store_link(href='#'): span Тело

