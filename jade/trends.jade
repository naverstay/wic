                              +check('Блеск и сияние')
                            
                    .filter_col
                      .f_label.f_label_v1() Тип волос
                          
                      .filter_scroller.mCSB
                        ul.option_list
                          +loop_while(1)
                            li
                              +check('Нормальные')
                            li
                              +check('Светлые')
                            li
                              +check('Окрашенные')
                            li
                              +check('Тонкие')
                            li
                              +check('Тонкие')
                              
                    .filter_col.cb._last
