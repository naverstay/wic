include mixins.pug
doctype html
html(lang='ru')
  +dev_head('WIC trends')

  body
    .wrapper._trends
      .base
        +header()

        .main_content
          .filter_section
            form.section_inner(action='#')
              .filter_block
                .filter_collapse
                  a.filter_link.toggleFilter(href='#filter')
                    span.filter_icon 
                    span Фильтр
                    span.filter_counter 2
                #filter(style='display:none;')
                  .filter_expand
                    .filter_col
                      label.f_label.f_label_v1(for='price_min') Цена, руб.
                      .input_w.toddler_v1
                        #price_range.toddler(data-control-min='#price_min' data-control-max='#price_max' data-min=0 data-max=20000)
                      .f_row.f_row_v2
                        .f_cell
                          span от
                          .input_w
                            input#price_min.f_input_v2.f_input.text_center(data-inputmask="'alias': 'numeric', 'rightAlign': false, 'allowMinus': false, 'allowPlus': false, 'autoGroup': true, 'groupSeparator': ' ', 'digits': 0, 'digitsOptional': false" type='number')
                        .f_cell
                          span до
                          .input_w
                            input#price_max.f_input_v2.f_input.text_center(data-inputmask="'alias': 'numeric', 'rightAlign': false, 'allowMinus': false, 'allowPlus': false, 'autoGroup': true, 'groupSeparator': ' ', 'digits': 0, 'digitsOptional': false" type='number')
                
                      .f_row
                        +check('Только со скидкой')
                          
                    .filter_col.cb
                      .f_label.f_label_v1() Бренды
                          
                      .filter_scroller.mCSB
                        ul.option_list
                          +loop_while(3)
                            li
                              +check('Alterna')
                            li
                              +check('Sebastian')
                            li
                              +check('CND')
                            li
                              +check('Caviar')
                            li
                              +check('INM')
                            
                    .filter_col
                      .f_label.f_label_v1() Тип продукта 
                          
                      .filter_scroller.mCSB
