                              +check('Шампунь')
                            li
                              +check('Кондицонер')
                            li
                              +check('Маска')
                            li
                              +check('Масло')
                            li
                              +check('Масло')
                            
                    .filter_col
                      .f_label.f_label_v1() Назначение
                          
                      .filter_scroller.mCSB
                        ul.option_list
                          +loop_while(1)
                            li
                              +check('Объём')
                            li
                              +check('Восстановление')
                            li
                              +check('Увлажнение')
                            li
                              +check('Блеск и сияние')
