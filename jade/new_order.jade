include mixins.pug
doctype html
html(lang='ru')
  +dev_head('WIC new_order')

  body
    .wrapper._profile
      .base
        +header()

        .main_content
          .section_inner
            .grid_row
              .grid_col._col_8
                +aside(2, 1)
                        
              .grid_col._col_12
                .order_caption Новый заказ 
                .order_text 
                  p Можно добавить в заказ всекие позиции , например из прошлого заказа или из каталога. Можно воспользоваться поиском и/или сортировкой по параметрам, а потом нажать на кнопку “Оформить заказ”

              .grid_col._col_11
                .order_summary._purchase
                  .order_summary_col
                    dl.order_summary_list
                      dt Позиции в заказе:
                      dd 45 шт.

                      dt Товаров в заказе:
                      dd 65 шт.

                  .order_summary_col
                    dl.order_summary_list
                      dt Сумма
                      dd._total 540 120 руб.

                    a.btn_v1.order_btn.btn_black(href='#')
                      span Оформить заказ
                      
                .order_summary_footer.mob_hidden
                  a.gl_link(href='#') Детали заказа

              .grid_col._col_7: .stock_search_holder
                .order_history_block
                  .mob_only
                    .order_history_select.select_box_v2
                      select.select2
                        option(value="1") Весь каталог
                        option(value="2" selected) Из прошлого заказа
                        
                  ul.order_history_filter.mob_hidden
                    li
                      label.f_check.f_check_v2
                        input.inp_hidden(type='radio' value="1" name='history_switcher')
                        span.check_text Весь каталог
                      
                    li
                      label.f_check.f_check_v2
                        input.inp_hidden(type='radio' value="2" name='history_switcher' checked)
                        span.check_text Из прошлого заказа
                    
                .stock_search_form._order
                  form(action='#')
                    .f_cell.stock_search
                      input.f_input.f_input_v6(placeholder='Поиск по прошлому заказу')
                      button.stock_search_btn.btn_black.btn_v3
                        span.i-search
                
                .filter_block._order
                  .filter_collapse
                    a.filter_link.toggleFilter(href='#filter')
                      span.filter_icon
                      span Сортировать
                      //-span.filter_counter 2
                  #filter(style='display:none;')
                    .filter_expand
                      .filter_col
                        label.f_label.f_label_v1(for='price_min') Цена, руб.
                        .input_w.toddler_v1
                          #price_range.toddler(data-control-min='#price_min' data-control-max='#price_max' data-min=0 data-max=20000)
                        .f_row.f_row_v2
                          .f_cell
                            span от
                            .input_w
                              input#price_min.f_input_v2.f_input.text_center(data-inputmask="'alias': 'numeric', 'rightAlign': false, 'allowMinus': false, 'allowPlus': false, 'autoGroup': true, 'groupSeparator': ' ', 'digits': 0, 'digitsOptional': false" type='number')
                          .f_cell
                            span до
                            .input_w
                              input#price_max.f_input_v2.f_input.text_center(data-inputmask="'alias': 'numeric', 'rightAlign': false, 'allowMinus': false, 'allowPlus': false, 'autoGroup': true, 'groupSeparator': ' ', 'digits': 0, 'digitsOptional': false" type='number')

                        .f_row
                          +check('Только со скидкой')

                      .filter_col.cb
                        .f_label.f_label_v1() Бренды

                        .filter_scroller.mCSB
                          ul.option_list
                            +loop_while(3)
                              li
                                +check('Alterna')
                              li
                                +check('Sebastian')
                              li
                                +check('CND')
                              li
                                +check('Caviar')
                              li
                                +check('INM')

                      .filter_col
                        .f_label.f_label_v1() Тип продукта 

                        .filter_scroller.mCSB
                          ul.option_list
                            +loop_while(1)
                              li
                                +check('Шампунь')
                              li
                                +check('Кондицонер')
                              li
                                +check('Маска')
                              li
                                +check('Масло')
                              li
                                +check('Масло')

                      .filter_col
                        .f_label.f_label_v1() Назначение

                        .filter_scroller.mCSB
                          ul.option_list
                            +loop_while(1)
                              li
                                +check('Объём')
                              li
                                +check('Восстановление')
                              li
                                +check('Увлажнение')
                              li
                                +check('Блеск и сияние')
                              li
                                +check('Блеск и сияние')

                      .filter_col
                        .f_label.f_label_v1() Тип волос

                        .filter_scroller.mCSB
                          ul.option_list
                            +loop_while(1)
                              li
                                +check('Нормальные')
                              li
                                +check('Светлые')
                              li
                                +check('Окрашенные')
                              li
                                +check('Тонкие')
                              li
                                +check('Тонкие')

                      .filter_col.cb._last
                        a.f_reset.fReset(href='#')
                          span.i-close
                          span Сбросить фильтр

