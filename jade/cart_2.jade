      .base
        +header()

        .main_content
          .section_inner.clearfix
            .block_title._cart_mode Корзина

            .cart_col._checkout: form(action='#')
              .cart_topic.mob_hidden
                span Покупатель и адрес доставки
                
              .cart_upright._wide
                .cart_label._mod_1 Доставка
                .select_box_v1
                  select.select2(data-placeholder='Стандартная доставка (бесплатно)')
                    option(disabled selected)
                    option 1
                    option 2
              
              .cart_upright.cb._first
                .f_cell
                  input.f_input_v11.f_input(placeholder='ФИО')
                  
