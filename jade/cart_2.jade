                  input.f_input_v11.f_input(placeholder='Индекс')
                  
                .f_cell
                  input.f_input_v11.f_input(placeholder='Город')
                  
                .f_cell
                  input.f_input_v11.f_input(placeholder='Адрес')
                  
              .cart_upright._second
                .f_cell
                  input.f_input_v11.f_input(placeholder='E-mail')

                .f_cell
                  input.f_input_v11.f_input(placeholder='Телефон')

                .f_cell
