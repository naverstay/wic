                        a.product_block(href='product.html')
                          .product_bg
                            img(src='i/oribe_gray_bg.jpg')
                          .product_img
                            img.shadowed(src='i/product_2.png')

                      .td.col_22 Alterna Caviar Anti-Aging Smoothing Hydra-Gelee Nourishing Hair Perfector
                      .td.col_23
                        span 1 000 мл
                      .td.col_24
                        span 24 390 руб.
                      .td.col_26
                        span.dt_hidden Склад: 
                        span 4 шт

                      .td.col_27
                        span.cart_icon.i-cart
